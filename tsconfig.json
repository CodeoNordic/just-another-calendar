{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
        "checkJs": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "dist",
		"paths": {
			"@components/*": ["./src/components/*"],
			"@utils/*": ["./src/utils/*"],
			"@context/*": ["./src/context/*"],
			"@png/*": ["./src/assets/png/*"],
			"@svg/*": ["./src/assets/svg/*"],
			"@assets/*": ["./src/assets/*"],
			"@/*": ["./src/*"]
		},
        "pretty": true,
        "removeComments": true,
		"sourceMap": false,
		"strict": true,
		"target": "ESNext",
		"typeRoots" : ["./node_modules/@types", "./src/types"]
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx"
	],
	"parcelTsPluginOptions": {
		"transpileOnly": false
    }
}